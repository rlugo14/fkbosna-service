// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int       @id @default(autoincrement())
    email     String    @unique
    password  String
    tenant    Tenant?   @relation(fields: [tenantId], references: [id])
    tenantId  Int?
    deletedAt DateTime?
    tokens    Token[]

    @@map(name: "users")
}

model Player {
    id        Int       @id @default(autoincrement())
    firstname String
    lastname  String
    color     Color?    @relation(fields: [colorId], references: [id])
    colorId   Int?
    fupaSlug  String    @default("")
    imageName String?
    tenant    Tenant?   @relation(fields: [tenantId], references: [id])
    tenantId  Int?
    deletedAt DateTime?
    fines     Fine[]

    @@map(name: "players")
}

model Color {
    id        Int       @id @default(autoincrement())
    players   Player[]
    name      String
    hexCode   String
    tenant    Tenant?   @relation(fields: [tenantId], references: [id])
    tenantId  Int?
    deletedAt DateTime?

    @@map(name: "colors")
}

model Tenant {
    id        Int        @id @default(autoincrement())
    slug      String     @unique
    name      String
    users     User[]
    players   Player[]
    colors    Color[]
    fupaSlug  String     @default("")
    imageName String?
    active    Boolean    @default(true)
    deletedAt DateTime?
    fineTypes FineType[]
    fines     Fine[]

    @@map(name: "tenants")
}

model Token {
    id        Int       @id @default(autoincrement())
    token     String    @db.VarChar(500)
    deletedAt DateTime?
    user      User?     @relation(fields: [userId], references: [id])
    userId    Int?

    @@map(name: "tokens")
}

model FineType {
    id        Int              @id @default(autoincrement())
    cost      Float
    name      String
    fines     Fine[]
    tenant    Tenant           @relation(fields: [tenantId], references: [id])
    tenantId  Int
    deletedAt DateTime?
    category  FineTypeCategory

    @@map(name: "fine_types")
}

enum FineTypeCategory {
    TRAINING
    GENERAL
    GAME
}

model Fine {
    id        Int       @id @default(autoincrement())
    amount    Int
    player    Player    @relation(fields: [playerId], references: [id])
    playerId  Int
    createdAt DateTime
    type      FineType  @relation(fields: [typeId], references: [id])
    typeId    Int
    tenant    Tenant    @relation(fields: [tenantId], references: [id])
    tenantId  Int
    total     Float
    deletedAt DateTime?

    @@map(name: "fines")
}
