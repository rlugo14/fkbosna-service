// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int     @id @default(autoincrement())
    email    String  @unique
    password String
    tenant   Tenant? @relation(fields: [tenantId], references: [id])
    tenantId Int?

    @@map(name: "users")
}

model Player {
    id        Int     @id @default(autoincrement())
    firstname String
    lastname  String
    color     Color?  @relation(fields: [colorId], references: [id])
    colorId   Int?
    fupaSlug  String  @default("")
    imageName String?
    tenant    Tenant? @relation(fields: [tenantId], references: [id])
    tenantId  Int?

    @@map(name: "players")
}

model Color {
    id       Int      @id @default(autoincrement())
    players  Player[]
    name     String
    hexCode  String
    tenant   Tenant?  @relation(fields: [tenantId], references: [id])
    tenantId Int?

    @@map(name: "colors")
}

model Tenant {
    id        Int      @id @default(autoincrement())
    slug      String   @unique
    name      String
    users     User[]
    players   Player[]
    colors    Color[]
    fupaSlug  String   @default("")
    imageName String?
    active    Boolean  @default(true)

    @@map(name: "tenants")
}
